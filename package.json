    "@types/puppeteer": "^3.0.0",
    "@types/qrcode": "^1.3.4",
    "dotenv": "^8.2.0",
    "eslint": "^7.1.0",
    "fs-extra": "^9.0.1",
    "handlebars": "^4.7.6",
    "hapi-cors": "^1.0.3",
